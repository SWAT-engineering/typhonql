// Basic insertion

insert Customer {
  // special @id field for identities (normally auto-generated)
  @id: #john,

  name: "John Doe",
  age: 30,
  payment: "123456789",

  // custom data type literals 
  address: address (
    street: "Science Park",
  	number: "123",
    zipcode: "1000 AB",
    city: "Amsterdam"
  )
}


// A simple query (NB. c.address is not allowed!?!?!)
from Customer c select c.name, c.age, c.address.street


